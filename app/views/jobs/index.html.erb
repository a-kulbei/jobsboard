<div class='page-header'>
	<h1>Krakow Start-up jobs board</h1>
	<a href="/newposition">Add new position</a>
</div>

<table class="table table-striped">
	<tbody>
		<% @jobs.each do |job| %>
			<tr>
				<td class='badge_td'><span class="label label-info">new</span> </td>
				<td><%= link_to(job.title, :action => 'show', :id => job.id) %> <span class='muted'>&nbspat&nbsp</span> <%= job.company.name %> </td>
				<td><%= job.created_at.strftime("%d %b") %></td>
			</tr>
		<% end %>
	</tbody>
</table>